<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="android.emparejaapp.FacilActivity">


    <ImageButton
        android:id="@+id/btn2"
        android:layout_width="93dp"
        android:layout_height="98dp"
        android:layout_marginTop="145dp"
        android:padding="0dp"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/carta"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="25dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toRightOf="@+id/btn1"
        android:layout_marginLeft="19dp" />

    <ImageButton
        android:id="@+id/btn4"
        android:layout_width="0dp"
        android:layout_height="99dp"
        android:layout_marginTop="10dp"
        android:padding="0dp"
        android:scaleType="fitXY"
        app:layout_constraintTop_toBottomOf="@+id/btn2"
        app:srcCompat="@drawable/carta"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintRight_toRightOf="@+id/btn2"
        app:layout_constraintLeft_toLeftOf="@+id/btn2"
        app:layout_constraintHorizontal_bias="0.0" />

    <ImageButton
        android:id="@+id/btn3"
        android:layout_width="93dp"
        android:layout_height="100dp"
        android:padding="0dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/carta"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="79dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="79dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btn1" />

    <ImageButton
        android:id="@+id/btn1"
        android:layout_width="0dp"
        android:layout_height="98dp"
        android:padding="0dp"
        android:layout_marginTop="145dp"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/carta"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/btn3"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/btn3"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:id="@+id/lblPuntosDos"
        android:layout_width="44dp"
        android:layout_height="0dp"
        android:layout_marginEnd="27dp"
        android:text="0"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/lblJudadorUno"
        app:layout_constraintTop_toTopOf="@+id/lblJudadorDos"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginStart="23dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1" />

    <TextView
        android:id="@+id/lblPuntosUno"
        android:layout_width="57dp"
        android:layout_height="0dp"
        android:layout_marginEnd="108dp"
        android:layout_marginStart="107dp"
        android:text="0"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/lblJudadorUno"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/lblJudadorUno"
        app:layout_constraintRight_toLeftOf="@+id/lblPuntosDos"
        app:layout_constraintTop_toTopOf="@+id/lblJudadorUno"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <TextView
        android:id="@+id/lblJudadorDos"
        android:layout_width="103dp"
        android:layout_height="30dp"
        android:text="TextView"
        android:textSize="24sp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="19dp"
        app:layout_constraintBottom_toBottomOf="@+id/lblPuntosUno"
        android:layout_marginEnd="21dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toTopOf="@+id/lblPuntosUno"
        app:layout_constraintLeft_toRightOf="@+id/lblPuntosUno"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/lblJudadorUno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="24sp"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="7dp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="5dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/lblTemporizador"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="18dp"
        android:layout_marginStart="13dp"
        android:text="30"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/labelTiempo"
        app:layout_constraintLeft_toRightOf="@+id/labelTiempo"
        app:layout_constraintRight_toRightOf="@+id/btn2"
        app:layout_constraintTop_toTopOf="@+id/labelTiempo"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <TextView
        android:id="@+id/labelTiempo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Temporizador"
        android:textSize="18sp"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="3dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/btn1"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>
